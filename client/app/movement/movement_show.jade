div.movement
    div.show
        h4 {{movement.name}} - {{movement.nameEn}}
        h5 {{movement.slogan}}
        div.muscle-groupgroup
            img(ng-src="{{movement.muscleGroupImgList}}")
        div.description
            a &nbsp &nbsp {{movement.description}}
        div.steps(ng-repeat="step in steps")
            a(href="/home#/movement/{{movement.position}}/step/{{step.position}}")
                div.left
                    div.title
                        h4 {{step.title}}
                    div.level
                        li(ng-repeat="level in step.level") {{level.title + "ï¼š"}} {{level.group}} X {{level.count}}
                div.right
                    img(ng-src="{{step.imgList[1].imgUrl}}" + '?imageMogr2/thumbnail/100x100')
